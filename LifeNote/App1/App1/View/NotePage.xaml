<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1.View"
             x:Class="App1.NotePage"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             xmlns:c="clr-namespace:App1.Controls"
             xmlns:richtexteditor="clr-namespace:Syncfusion.XForms.RichTextEditor;assembly=Syncfusion.SfRichTextEditor.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             android:TabbedPage.ToolbarPlacement="Bottom"
             android:TabbedPage.BarSelectedItemColor="Blue"
             android:TabbedPage.BarItemColor="Gray"
             NavigationPage.HasBackButton="False"          
             Title="LifeNote">
    <ContentPage 
             BackgroundColor="LightYellow" Title="Note">
        <ContentPage.Content>
            <StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackLayout>
                        <Label x:Name="date_label" FontSize="20" FontAttributes="Bold" HorizontalOptions="Start"></Label>
                        <Image x:Name="rateimage" Source="rate0.png"></Image>
                        <Slider Minimum="0" Maximum="5" x:Name="points_slider" ValueChanged="OnSliderValueChanged"></Slider>
                    </StackLayout>
                    <StackLayout Grid.Column="1">
                        <buttons:SfButton Clicked="save_clicked" Text="Save" ShowIcon="True" ImageSource="savenote_icon.png" CornerRadius="20" WidthRequest="3" HeightRequest="50" Margin="10"/>
                    </StackLayout>
                </Grid>
                <richtexteditor:SfRichTextEditor VerticalOptions="FillAndExpand" x:Name="content_editor" PlaceHolder="Type something"/>
            </StackLayout>
        </ContentPage.Content>
        <ContentPage.IconImageSource>
            <FileImageSource File="openednote_icon.png"></FileImageSource>
        </ContentPage.IconImageSource>
    </ContentPage>
    <local:CalendarPage Title="Calendar">
        <local:CalendarPage.IconImageSource>
            <FileImageSource File="calendar_icon.png"></FileImageSource>
        </local:CalendarPage.IconImageSource>
    </local:CalendarPage>
    <local:SideNotePage Title="Side note">
        <local:SideNotePage.IconImageSource>
            <FileImageSource File="sidenote_icon.png"></FileImageSource>
        </local:SideNotePage.IconImageSource>
    </local:SideNotePage>
    <local:StatisticsPage Title="Statistics">
        <local:StatisticsPage.IconImageSource>
            <FileImageSource File="graph_icon.png"></FileImageSource>
        </local:StatisticsPage.IconImageSource>
    </local:StatisticsPage>
    <local:SettingsPage Title="Settings">
        <local:SettingsPage.IconImageSource>
            <FileImageSource File="settings_icon.png"></FileImageSource>
        </local:SettingsPage.IconImageSource>
    </local:SettingsPage>
</TabbedPage>   